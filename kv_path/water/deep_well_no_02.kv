<DeepWellNo01>:
    name: 'deep_well_no_02'
    MDBoxLayout:
        orientation: 'vertical'

    MDNavigationLayout:

        MDScreenManager:

            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'

                    MDTopAppBar:
                        title: "Navigation Drawer"
                        elevation: 4
                        pos_hint: {"top": 1}
                        md_bg_color: "#ffa500"
                        specific_text_color: "#4a4939"
                        left_action_items: [['arrow-left', lambda x: root.change_screen('water_main_menu')]]
                        right_action_items:
                            [["logout", lambda x: app.callback(x)]]
                       

                    
                    MDRecycleView:
                        MDList:
                            MDTextField:
                                id: shift
                                hint_text: 'Click me to show shift'
                                mode: "rectangle"
                                on_focus: app.show_drop_down(self, self.focus)
                            MDTextField:
                                hint_text: "Tech No."
                                id: tech_no
                                mode: "rectangle"
                            MDTextField:
                                id: datetime_encode
                                hint_text: "Date/Time Encode"
                                mode: "rectangle"
                                pos_hint: {'center_x': .5, 'center_y': .5}
                                readonly: True
                                on_focus: if self.focus: app.show_datetime_picker()
                            MDTextField:
                                hint_text: "Voltage (V) TIME Remarks"
                                id: voltage
                                mode: "rectangle"
                            MDTextField:
                                hint_text: "Current (A)"
                                id: current
                                mode: "rectangle"
                            MDTextField:
                                hint_text: "Hour Meter (hrs)"
                                id: hour_meter
                                mode: "rectangle"
                            MDTextField:
                                hint_text: "Water Draw (cu.m)"
                                id: water_draw
                                mode: "rectangle"
                            MDTextField:
                                hint_text: "Remarks"
                                id: remarks
                                mode: "rectangle"
                                multiline: True
                            BoxLayout:
                                orientation: 'horizontal'
                                size_hint_y: None
                                height: self.minimum_height
                                spacing: dp(10)
                                padding: dp(16)  # Add padding here

                                Widget:  # Spacer to push the button to the right
                                
                                MDRaisedButton:
                                    text: "Save"
                                    size_hint: None, None
                                    size: "340dp", "90dp"
                                    on_press: app.insert_to_database()  # Replace with your button press function    