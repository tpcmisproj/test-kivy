<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#ffa500"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"

<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True
    text_align: "left"  # Set the text alignment to left

<DiAcf>:
    name: 'di_acf'
    MDBoxLayout:
        orientation: 'vertical'

    MDNavigationLayout:

        MDScreenManager:

            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'

                    MDTopAppBar:
                        title: "Navigation Drawer"
                        elevation: 4
                        pos_hint: {"top": 1}
                        md_bg_color: "#ffa500"
                        specific_text_color: "#4a4939"
                        left_action_items: [['arrow-left', lambda x: root.change_screen('water_main_menu')]]
                        right_action_items:
                            [["logout", lambda x: app.callback(x)]]

                    # MDTopAppBar:
                    #     title: "Water"
                    #     elevation: 4
                    #     pos_hint: {"top": 1}
                    #     md_bg_color: "#ffa500"
                    #     specific_text_color: "#4a4939"
                    #     left_action_items: [['arrow-left', lambda x: root.change_screen('menu')]]
                    #     right_action_items: [["dots-vertical", lambda x: app.callback(x)]]
                            
                    MDRecycleView:
                        MDList:
                            MDTextField:
                                id: shift
                                hint_text: 'Click me to show shift'
                                mode: "rectangle"
                                on_focus: app.show_drop_down(self, self.focus)
                                
                            MDTextField:
                                hint_text: "Tech No."
                                id: tech_no
                                mode: "rectangle"

                            MDTextField:
                                id: date_time_encode
                                hint_text: "Date/Time Encode"
                                mode: "rectangle"
                                pos_hint: {'center_x': .5, 'center_y': .5}
                                readonly: True
                                on_focus: if self.focus: app.show_datetime_picker()

                            MDTextField:
                                hint_text: "Pump No."
                                id: pump_number
                                mode: "rectangle"

                            MDTextField:
                                hint_text: "Initial Meter Reading"
                                id: initial_meter_reading
                                mode: "rectangle"

                            MDTextField:
                                hint_text: "Final Meter Reading"
                                id: final_meter_reading
                                mode: "rectangle"

                            MDTextField:
                                hint_text: "Rinse Start Time"
                                id: rinse_start_time
                                mode: "rectangle"

                            MDTextField:
                                hint_text: "Rinse Finish Time"
                                id: rinse_finish_time
                                mode: "rectangle"

                            MDTextField:
                                hint_text: "Pressure (psi)"
                                id: pressure_psi
                                mode: "rectangle"

                            MDTextField:
                                hint_text: "Micron Filter Pressure (psi)"
                                id: micron_filter_pressure_psi
                                mode: "rectangle"
                                multiline: True
                                        
                            MDTextField:
                                hint_text: "Remarks"
                                id: remarks
                                mode: "rectangle"
                                        
                            BoxLayout:
                                orientation: 'horizontal'
                                size_hint_y: None
                                height: self.minimum_height
                                spacing: dp(10)
                                padding: dp(16)  # Add padding here

                                Widget:  # Spacer to push the button to the right
                                        
                                MDRaisedButton:
                                    text: "Save"
                                    size_hint: None, None
                                    size: "340dp", "90dp"
                                    on_press: app.insert_to_database()  # Replace with your button press function    
                                        
                            

                            