<DiCationBed01Regen>:
    name: 'di_cation_bed_01_regen'
    BoxLayout:
        orientation: 'vertical'

    MDNavigationLayout:

        ScreenManager:

            Screen:

                BoxLayout:
                    orientation: 'vertical'

                    MDTopAppBar:
                        title: "DI CATION BED 01 REGEN"
                        elevation: 4
                        pos_hint: {"top": 1}
                        md_bg_color: "#ffa500"
                        specific_text_color: "#4a4939"
                        left_action_items: [['arrow-left', lambda x: root.change_screen('water_main_menu')]]
                        right_action_items: [["dots-vertical", lambda x: app.callback(x)]]
                           
                       

                    MDBottomNavigation:
                        selected_color_background: "orange"
                        text_color_active: "lightgrey"
            
                        MDBottomNavigationItem:
                            name: 'gas1'
                            text: 'H2 GAS'
                            icon: 'fire-circle'
                            
                            GridLayout:
                                cols: 2
                                padding: dp(16)
                                spacing: dp(10)


                                MDTextField:
                                    id: shift
                                    hint_text: 'Click me to show shift'
                                    mode: "rectangle"
                                    on_focus: app.show_drop_down(self, self.focus)


                                MDTextField:
                                    hint_text: "Tech No."
                                    id: tech_no
                                    mode: "rectangle"

                                MDTextField:
                                    id: date_time_encode
                                    hint_text: "Date/Time Encode"
                                    mode: "rectangle"
                                    pos_hint: {'center_x': .5, 'center_y': .5}
                                    readonly: True
                                    on_focus: if self.focus: app.show_datetime_picker()

                                MDTextField:
                                    hint_text: "Back Wash Flowrate (LPH)"
                                    id: back_wash_flowrate
                                    mode: "rectangle"

                                MDTextField:
                                    hint_text: "Back Wash Time (min)"
                                    id: back_wash_time
                                    mode: "rectangle"

                                MDTextField:
                                    hint_text: "Settling Time (min)"
                                    id: settling_time
                                    mode: "rectangle"

                                MDTextField:
                                    hint_text: "Chem - Water Injection Flowrate (LPH)"
                                    id: chem_water_injection_flowrate
                                    mode: "rectangle"

                                MDTextField:
                                    hint_text: "Chem - Water Injection Time (min)"
                                    id: chem_water_injection_time
                                    mode: "rectangle"

                                MDTextField:
                                    hint_text: "Slow Rinse Flowrate (LPH)"
                                    id: slow_rinse_flowrate
                                    mode: "rectangle"

                                MDTextField:
                                    hint_text: "Slow Rinse Time (min)"
                                    id: slow_rinse_time
                                    mode: "rectangle"
                                    
                                MDTextField:
                                    hint_text: "Seco Pressure gauge BH2"
                                    id: s_pressure_gauge
                                    mode: "rectangle"

                                MDTextField:
                                    hint_text: "Fast Rinse Flowrate (LPH)"
                                    id: fast_rinse_flowrate
                                    mode: "rectangle"

                                MDTextField:
                                    hint_text: "Fast Rinse Time (min)"
                                    id: fast_rinse_time
                                    mode: "rectangle"

                                MDTextField:
                                    hint_text: "Amount of Chemical Used"
                                    id: amount_of_chemical_used
                                    mode: "rectangle"

                                MDTextField:
                                    hint_text: "Remarks"
                                    id: remarks
                                    mode: "rectangle"
                                    multiline: True
                                    
                            BoxLayout:
                                orientation: 'horizontal'
                                size_hint_y: None
                                height: self.minimum_height
                                spacing: dp(10)
                                padding: dp(16)  # Add padding here

                                Widget:  # Spacer to push the button to the right
                                
                                MDRaisedButton:
                                    text: "Save"
                                    size_hint: None, None
                                    size: "340dp", "90dp"
                                    on_press: app.insert_to_database()  # Replace with your button press function    
                                    
                            BoxLayout:
                                orientation: 'horizontal'
                                size_hint_y: None
                                height: self.minimum_height
                                spacing: dp(10)
                                padding: dp(16)  # Add padding here

                                Widget:  # Spacer to push the button to the right
                                
                                MDRaisedButton:
                                    text: "Save"
                                    size_hint: None, None
                                    size: "340dp", "90dp"
                                    on_press: app.insert_to_database()  # Replace with your button press function      